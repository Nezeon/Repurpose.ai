# =============================================================================
# Drug Repurposing Platform - Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# =============================================================================


# API Keys
# ========================================
# Google Gemini API Key (Required)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Lens.org API Key (Optional)
# Get from: https://lens.org/lens/user/api-access
# Only needed if patent search is required
LENS_API_KEY=your_lens_api_key_here

# Semantic Scholar API Key (Optional)
# Get from: https://www.semanticscholar.org/product/api
# Enables higher rate limits for academic paper searches
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here


# LLM Configuration
# ========================================
# Ollama settings (for local LLM fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Gemini model selection
# Options: gemini-2.0-flash (fast), gemini-1.5-pro (quality)
GEMINI_MODEL=gemini-2.0-flash


# Application Settings
# ========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false


# Cache Settings
# ========================================
# Cache TTL in seconds (604800 = 7 days)
CACHE_TTL=604800
CACHE_DIR=data/cache
VECTOR_DB_DIR=data/vector_db


# API Settings
# ========================================
# Timeout for external API calls (seconds)
API_TIMEOUT=30

# Number of retry attempts for failed API calls
MAX_RETRIES=3

# Delay between retries (seconds)
RETRY_DELAY=2


# Rate Limits (requests per second)
# ========================================
PUBMED_RATE_LIMIT=3.0
CLINICAL_TRIALS_RATE_LIMIT=1.0
CHEMBL_RATE_LIMIT=2.0
LENS_RATE_LIMIT=0.5


# Server Settings
# ========================================
HOST=0.0.0.0
PORT=8000


# CORS Origins (comma-separated)
# ========================================
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080


# MongoDB Settings (Optional)
# ========================================
# MongoDB connection URI (local or Atlas)
# For MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=drug_repurposing

# Set to true to use MongoDB for caching and user storage
# When false, JSON file caching is used (no auth features)
USE_MONGODB=false


# JWT Authentication Settings (Required if USE_MONGODB=true)
# ========================================
# Secret key for signing JWT tokens
# IMPORTANT: Generate a secure random key for production!
# Example: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# JWT algorithm (HS256 is recommended)
JWT_ALGORITHM=HS256

# Token expiration time in minutes (1440 = 24 hours)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
